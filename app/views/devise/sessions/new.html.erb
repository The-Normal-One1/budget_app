<%= stylesheet_link_tag 'registrations/new', media: 'all' %>

<div class='registeration-cont'>
  <div class='sign-up-header'>
 
<h2>Log In</h2>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-inp' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password",placeholder: 'Password', class: 'form-inp' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me, class: 'form-checkbox'%>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log In", class: 'submit-btn' %>
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class:'sign-up-shared' %><br />
<% end %>

</div>
