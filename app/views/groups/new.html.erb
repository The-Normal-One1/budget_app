<%= stylesheet_link_tag 'groups/new', media: 'all' %>


<div class='categorie_header'>
<%=link_to groups_path do %>
    <h1 class='categorie_title'>Categories</h1>
<%end%>
<h1 class='categorie_title'>Add Category</h1>
<%= link_to destroy_user_session_path, :method => :delete do %>
    <p>Logout</p>
<% end %>
</div>

<div class='categories_container'>

<%= form_for @categorie, url: groups_path, method: :post do |f| %>
    <div class='categorie-body'>
        <div class='form-group'>
            <%= f.label :name, class:'form-label' %> <br>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", class:'form-control' %>            
        </div>

        <div class='form-group'>
            <%= f.label :icon, class:'form-label' %> <br>
            <%= f.text_field :icon, autofocus: true, autocomplete: "icon", class:'form-control' %>
        </div>
    </div>
<div class='categorie_footer'>
    <%= f.submit 'Add Category', class:'btn' %>
</div>
<% end %>
</div>
