<%= stylesheet_link_tag 'groups/index', media: 'all' %>

<div class= 'category-cont'>

<div class='category-header'>
<%=link_to groups_path do %>
    <i class="fas fa-arrow-left"></i>
<%end%>

<h1 class='category-title'>Add Category</h1>
<%= link_to destroy_user_session_path, :method => :delete do %>
    <i class="fas fa-sign-out-alt"></i>
<% end %>
</div>

<div class='categories_container'>

<%= form_for @categorie, url: groups_path, method: :post do |f| %>
    <div class='categorie-body'>
        <div class='form-group'>
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:'Name', class:'form-inp' %>            
        </div>

        <div class='form-group'>
            <%= f.text_field :icon, autofocus: true, autocomplete: "icon", placeholder:'Icon', class:'form-inp' %>
        </div>
    </div>
<div class='btn-cont'>
    <%= f.submit 'Add Category', class:'btn-category' %>
</div>
<% end %>
</div>
